@page "/auth"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject NavigationManager NavigationManager
<PageTitle>Autenticado - KeyStore</PageTitle>

<div class="login-wrapper">
    <div class="login-card">
        <div class="login-header">
            <div class="user-icon">
                <svg fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                </svg>
            </div>
            <h1 class="login-title">¡Bienvenido!</h1>
            <p class="login-subtitle">Has iniciado sesión exitosamente</p>
        </div>

        <div class="auth-status-indicator authenticated">
            <i class="bi bi-check-circle-fill"></i>
            <span>Sesión activa</span>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="user-info-section">
                    <div class="user-greeting">
                        <p>Estás autenticado correctamente en KeyStore</p>
                    </div>
                </div>
            </Authorized>
        </AuthorizeView>

        <div class="auth-actions">
            <a href="/" class="login-button">
                <i class="bi bi-house-fill"></i>
                Ir a Inicio
            </a>

            <div class="additional-options">
                <a href="/Shop" class="secondary-link">
                    <i class="bi bi-shop"></i>
                    Explorar Tienda
                </a>
            </div>
        </div>

    </div>
</div>

@code {
    private void GoToHome()
    {
        NavigationManager.NavigateTo("/");
    }
}
